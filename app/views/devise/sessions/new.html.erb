<section class="section is-sign-up">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-half">
        <h1 class="title">Log in</h1>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, class: 'label' %>

            <div class="control">
              <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'input' %>
            </div>
          </div>

          <div class="field">
            <%= f.label :password, class: 'label' %>

            <div class="control">
              <%= f.password_field :password, autocomplete: 'current-password', class: 'input' %>
            </div>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <div class="control">
                <%= f.label :remember_me, class: 'checkbox' do %>
                  <%= f.check_box :remember_me %>
                  <%= 'Remember me' %>
                <% end %>
              </div>
            </div>
          <% end -%>

          <div class="field is-grouped is-grouped-right">
            <div class="control">
              <%= f.submit 'Log in', class: 'button is-link' %>
            </div>

            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <div class="control">
                <%= link_to 'Sign up', new_registration_path(resource_name), class: 'button is-light' %>
              </div>
            <% end -%>

            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <div class="control">
                <%= link_to 'Forgot your password?', new_password_path(resource_name), class: 'button is-light' %>
              </div>
            <% end -%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
